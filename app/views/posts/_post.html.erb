<div class="post">
  <div class="avatar">
    <%= image_tag post.user.avatar.url(:thumb) %>
  </div>

 <div class="user_info clearfix">
    <div class="user_name">
      <%=h post.user.name %>
    </div>

    <div class="user_title" %>
      <%=h post.user.title %>
    </div>

    <div class="user_status" %>
      Logged In
    </div>
  </div>
  <div class="post_info clearfix">
    <div class="post_content">
      <%=h post.content %>
    </div>
  </div>
</div>
