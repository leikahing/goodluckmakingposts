<header id="new_user_header">
<h1>create account</h1>
</header>
<section id="new_user_section">
<div class='errors'>
  <% user.errors.full_messages.each do |error| %>
    <p><%= error %></p>
  <% end %>
</div>
<%= form_for user, :html => { :class => "user_form", :multipart => true } do |f| %>
  <div class="form_field">
    <%= f.label :email, 'email' %>
    <%= f.text_field :email %>
  </div>
  <div class="form_field">
    <%= f.label :name, 'name' %>
    <%= f.text_field :name %>
  </div>
  <div class="form_field">
    <%= f.label :title, 'title' %>
    <%= f.text_field :title %>
  </div>
  <div class="form_field">
    <%= f.label :password, 'password' %>
    <%= f.password_field :password %>
  </div>
  <div class="form_field">
    <%= f.label :password_confirmation, 'password_confirmation' %>
    <%= f.password_field :password_confirmation %>
  </div>
  <div class="form_field">
    <%= f.label :avatar, 'avatar' %>
    <%= f.file_field :avatar %>
  </div>
  <div class="form_action">
    <%= f.submit 'submit', :class => "button" %>
  </div>
<% end %>
</section>
<%= link_to 'home', home_url, :class => "nav_link" %>
