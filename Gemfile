source 'http://rubygems.org'

# core application gems
gem 'rails'
gem 'sqlite3'
gem 'jquery-rails'

# utility gems
gem 'kaminari'
gem 'kramdown'
gem 'rinku'
gem 'gravtastic'

# asset template engines
gem 'sass-rails'
gem 'coffee-script'
gem 'uglifier'

group :test do
  gem 'turn', require: false
  gem 'rspec-rails'
  gem 'cucumber-rails'
  gem 'capybara'
end

group :development do
  gem 'rspec-rails'
  gem 'cucumber-rails'
  gem 'guard-rspec'
  gem 'ruby-debug19', require: 'ruby-debug'
  gem 'thin'
end
