source 'http://rubygems.org'

# core application gems
gem 'rails'
gem 'sqlite3'
gem 'jquery-rails'

# utility gems
gem 'kaminari'
gem 'paperclip'
gem 'kramdown'
gem 'rinku'
gem 'gravtastic'

# asset template engines
gem 'sass-rails'
gem 'coffee-script'
gem 'uglifier'

group :test do
  gem 'turn', :require => false
  gem 'rspec'
end

group :development do
  gem 'guard-rspec'
  gem 'ruby-debug19', :require => 'ruby-debug'
  gem 'thin'
end
